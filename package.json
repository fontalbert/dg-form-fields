              "last 2 versions",
              "ie >= 7"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true,
      "spread": true,
      "restParams": true
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
